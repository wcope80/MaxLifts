
@{
    ViewBag.Title = "Reps";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Rep Calculator</h2>

<div class="form-horizontal">
    <fieldset>

        <!-- Text input-->
        <div class="form-group">
            <label class="col-md-1 control-label" for="repsinput">Estimated Max</label>
            <div class="col-md-2 ">
                <input id="maxinput" name="maxinput" type="text" placeholder="" class="form-control">
                <p class="help-block">Enter desired one rep max.</p>
            </div>
        </div>

        <!-- Text input-->
        <div class="form-group">
            <label class="col-md-1 control-label" for="repsinput">Weight</label>
            <div class="col-md-2">
                <input id="weightinput" name="weightInput" type="text" placeholder="" class="form-control" >
                <p class="help-block">Enter test weight.</p>
            </div>
        </div>

        <!-- Text input-->
        <div class="form-group">
            <label class="col-md-1 control-label" for="repsinput">Reps Needed</label>
            <div class="col-md-2">
                <input id="repsinput" name="repsInput" type="text" placeholder="" class="form-control" disabled>
                <p class="help-block">Reps needed to reach estimated max.</p>
            </div>
           
        </div>

        <!-- Button -->
        <div class="control-group">
            <label class="control-label" for="calcbutton"></label>
            <div class="controls col-md-offset-1">
                <button id="calcbutton" name="calcbutton" class="btn btn-info">Calculate</button>
            </div>
        </div>
        <p><br />*Calculator uses Jim Wendler's formula from the 5/3/1 book</p>
    </fieldset>
</div>
<script type="text/javascript">
    $("#calcbutton").click(function () {
        var weight = parseInt($('#weightinput').val());
        var max = parseInt($('#maxinput').val());

        var multiplier = .0333
        var reps = (((max - weight)/ multiplier) / weight).toFixed(0)
        
        $("#repsinput").val(reps)
     });

</script>