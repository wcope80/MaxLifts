@model MaxLifts.Models.Set


    <div class="form-horizontal">
        <fieldset>
            <!-- Form Name -->
            <legend>Set Info</legend>

            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-1 control-label" for="txt_Exercise">Exercise</label>
                <div class="col-md-2">
                    @Html.DropDownListFor(m => m.Exercise, (SelectList)ViewBag.exerciseList, "Select", new { @class = "form-control" })
                    <p class="help-block">Select Exercise</p>
                </div>
            </div>

            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-1 control-label" for="txt_Weight">Weight:</label>
                <div class="col-md-2">
                    @Html.TextBoxFor(m => m.Weight, new {  @class = "form-control txtBx" })
                    <p class="help-block">Enter weight.</p>
                </div>
            </div>

            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-1 control-label" for="txt_Reps">Reps</label>
                <div class="col-md-2">
                    @Html.TextBoxFor(m => m.Reps, new { @class = "form-control txtBx" })
                    <p class="help-block">Enter reps.</p>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-1 control-label" for="txt_Date">Date</label>
                <div class="col-md-2">
                    @Html.TextBoxFor(m => m.SetDate, new { @id = "setDate", @class = "form-control dateTimeInput" })
                    <p class="help-block">Enter Date.</p>
                </div>
            </div>
            <!-- Button -->
            <div class="form-group">
                <label class="control-label" for="btn_Submit"></label>
                
                <div class="col-md-4 col-md-offset-1">
                
                    @if (Model.SetId != 0)
                    {
                    <button id="btn_Submit" class="btn btn-primary" name="action" value="Edit">Submit</button>
                    <button id="btn_Submit" name="action" class="btn btn-primary" value="Delete">Delete</button>
                    }
                    else
                    {
                        <button id="btn_Submit" class="btn btn-primary" name="action" value="Add">Submit</button>
                    }
                </div>
            </div>

        </fieldset>
    </div>

<script type="text/javascript">
    $(function () {
        $('#btn_Delete').click(function () {
            if (confirm('Are you sure you want to delete this set?')) {
                window.location.href = $(this).data('url');
            }
        });
    });

    $(document).ready(function () {
        jQuery('#setDate').datetimepicker({ format: 'm/d/Y H:i', step: 15 });
        //alert($('.txtBx').val());
        if ($('.txtBx').val() == 0)
        {
            $('.txtBx').val('');
        }

    });
</script>
